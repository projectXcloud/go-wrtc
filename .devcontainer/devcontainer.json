{
    "name": "Go WebRTC Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".",
        "args": {
            "VARIANT": "1.20"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "golang.Go",
                "ms-vscode.cpptools"
            ]
        }
    },

    "postStartCommand": "/bin/bash /workspaces/go-wrtc/.devcontainer/start-services.sh ",
    "remoteUser": "vscode",
    "forwardPorts": [3000],
    "runArgs": [
        "--name", "go_devcontainer",
        "--network", "bridge"
    ]
}
